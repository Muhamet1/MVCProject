@model Order

<div class="row" style="justify-content:center; margin:40px; padding:40px;background-color:#F0F8FF;box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;">
<div class="col-md-6" style="">
    <h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>
</div>
<div class="col-md-6 col-md-offset-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h1>Checkout</h1>
    <form asp-action="Checkout" method="post">
    <div class="form-group">
        <label>Name:</label><input asp-for="Name" class="form-control" />
         <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Surname:</label><input asp-for="SurName" class="form-control" />
         <span asp-validation-for="SurName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Telefon Number: </label><input asp-for="TelNumber" class="form-control" />
         <span asp-validation-for="TelNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email:</label><input asp-for="Email" class="form-control" />
         <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Address: </label><input asp-for="Address" class="form-control" />
         <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>City:</label><input asp-for="City" class="form-control" />
         <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <br/>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>
</div>

</div>